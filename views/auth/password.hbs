{{!-- view auth password.hbs --}}

   <div class="recover__password-wrapper background-nav">
    <div class="recover__password">

        {{#if error}}
        <p class="alert">{{error}}</p>
        {{/if}}

        <form class="form" action="/auth/password" method="POST">
            <div class="input-field reset__reverse">
                <input id="password" name="password" type="password" class="validate" required />
                <label class="recover__password-label" for="password">Новый пароль:</label>
                <span class="helper-text" data-error="Введите новый пароль"></span>
            </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">
                <input type="hidden" name="userId" value="{{userId}}">
                <input type="hidden" name="token" value="{{token}}">

            <button class="btn btn-primary btn-primary-update" type="submit">Обновить пароль</button>
        </form>
    </div>
</div>