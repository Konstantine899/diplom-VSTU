{{!  views card.hbs }}
<div id="cart">
  <div class="cart__list">
  {{#if courses.length}}
  <table cellspacing="0">
    <thead>
      <tr>
        <th>Название курса</th>
        <th>Количество</th>
        <th>Действие</th>
      </tr>
    </thead>

    <body>
      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Удалить</button>
        </td>
      </tr>
      {{/each}}
    </body>
  </table>
  <p>
    <strong class="cart__list-total-price">Общая стоимость:&nbsp;&nbsp;</strong><span class="price cart__list-price">{{price}}</span>
  </p>

  <form action="/orders" method="POST">
  <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn">Сделать заказ</button>
  </form>

  {{else}}
  <p class="cart-empty">Корзина пуста</p>
  {{/if}}
  </div>
</div>